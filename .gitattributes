# Auto detect text files and perform LF normalization
* text=auto

# Force specific line endings for different file types
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary

# Font files
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Audio/Video files
*.mp3 binary
*.mp4 binary
*.avi binary
*.mov binary
*.wav binary

# Archive files
*.tar binary
*.gz binary
*.bz2 binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Log files
*.log text eol=lf

# Environment files
.env* text eol=lf

# Documentation
*.rst text eol=lf
*.tex text eol=lf

# Config files
*.conf text eol=lf
*.cfg text eol=lf
*.ini text eol=lf 